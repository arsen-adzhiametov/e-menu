<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
            android:text=""
            android:id="@+id/editTextPassword"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:layout_centerHorizontal="true">
    </TextView>

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/gridNumericKeyboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/editTextPassword"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:columnCount="3"
                android:orientation="horizontal" >

        <Button android:id="@+id/b1"
                android:layout_width="@dimen/button_heigth"
                android:layout_height="@dimen/button_heigth"
                android:text="1" />
        <Button android:id="@+id/b2"
                android:layout_width="@dimen/button_heigth"
                android:layout_height="@dimen/button_heigth"
                android:text="2" />
        <Button android:id="@+id/b3"
                android:layout_width="@dimen/button_heigth"
                android:layout_height="@dimen/button_heigth"
                android:text="3" />
        <Button android:id="@+id/b4"
                android:layout_width="@dimen/button_heigth"
                android:layout_height="@dimen/button_heigth"
                android:text="4" />
        <Button android:id="@+id/b5"
                android:layout_width="@dimen/button_heigth"
                android:layout_height="@dimen/button_heigth"
                android:text="5" />
        <Button android:id="@+id/b6"
                android:layout_width="@dimen/button_heigth"
                android:layout_height="@dimen/button_heigth"
                android:text="6" />
        <Button android:id="@+id/b7"
                android:layout_width="@dimen/button_heigth"
                android:layout_height="@dimen/button_heigth"
                android:text="7" />
        <Button android:id="@+id/b8"
                android:layout_width="@dimen/button_heigth"
                android:layout_height="@dimen/button_heigth"
                android:text="8" />
        <Button android:id="@+id/b9"
                android:layout_width="@dimen/button_heigth"
                android:layout_height="@dimen/button_heigth"
                android:text="9" />
        <Button android:id="@+id/bBks"
                android:layout_width="@dimen/button_heigth"
                android:layout_height="@dimen/button_heigth"
                android:text="Bks" />
        <Button android:id="@+id/b0"
                android:layout_width="@dimen/button_heigth"
                android:layout_height="@dimen/button_heigth"
                android:text="0" />
        <Button android:id="@+id/bOk"
                android:layout_width="@dimen/button_heigth"
                android:layout_height="@dimen/button_heigth"
                android:text="OK" />
    </GridLayout>

    <Button android:id="@+id/resetButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:text="Reset" />

</RelativeLayout>